<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0-windows</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <!-- NuGet 包信息 -->
    <PackageId>MarkdView</PackageId>
    <Version>1.0.0</Version>
    <Authors>Hopesy</Authors>
    <Company>MinoChat</Company>
    <Product>MarkdView</Product>
    <Description>Modern WPF Markdown renderer with streaming support, syntax highlighting, emoji rendering, and Mac-style code blocks. 基于 Markdig 的现代化 WPF Markdown 渲染库，支持流式渲染、代码高亮、Emoji 彩色渲染和 Mac 风格代码块。</Description>
    <PackageTags>wpf;markdown;markdig;streaming;syntax-highlighting;ai;emoji;code-block</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/MinoChat/MarkdView</RepositoryUrl>
    <PackageProjectUrl>https://github.com/MinoChat/MarkdView</PackageProjectUrl>
    <RepositoryType>git</RepositoryType>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <PackageReleaseNotes>v1.0.0: Initial release with streaming support, syntax highlighting, emoji rendering, and Mac-style code blocks with copy functionality.</PackageReleaseNotes>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Emoji.Wpf" Version="0.3.4" />
    <PackageReference Include="Markdig" Version="0.43.0" />
  </ItemGroup>

  <!-- 包含 README 和 LICENSE 到 NuGet 包 -->
  <ItemGroup>
    <None Include="..\README.md" Pack="true" PackagePath="\" />
    <None Include="..\LICENSE" Pack="true" PackagePath="\" />
  </ItemGroup>
</Project>
