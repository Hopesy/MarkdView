<UserControl x:Class="MarkdView.Extensions.Controls.CodeBlockControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Border x:Name="RootBorder" Margin="0,12,0,12"
            Background="{DynamicResource Markdown.CodeBlock.Background}"
            BorderBrush="{DynamicResource Markdown.CodeBlock.Border}"
            BorderThickness="1" CornerRadius="6">

        <Grid>
            <Grid.RowDefinitions>
                <!-- æ ‡é¢˜æ ï¼ˆè¯­è¨€+å¤åˆ¶æŒ‰é’®ï¼‰ -->
                <RowDefinition Height="Auto" />
                <!-- ä»£ç å†…å®¹ -->
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- æ ‡é¢˜æ  -->
            <Border Grid.Row="0" Padding="12,8"
                    Background="{DynamicResource Markdown.CodeBlock.LabelBackground}"
                    BorderBrush="{DynamicResource Markdown.CodeBlock.Border}"
                    BorderThickness="0,0,0,1" CornerRadius="6,6,0,0">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- è¯­è¨€æ ‡ç­¾ -->
                    <TextBlock x:Name="LanguageLabel" Grid.Column="0" VerticalAlignment="Center"
                               FontFamily="{DynamicResource Markdown.CodeFontFamily}"
                               FontSize="11"
                               Foreground="{DynamicResource Markdown.CodeBlock.LabelForeground}"
                               Text="code" />

                    <!-- å¤åˆ¶æŒ‰é’® -->
                    <Button x:Name="CopyButton" Grid.Column="1" Padding="8,4" Background="Transparent"
                            BorderBrush="Transparent" BorderThickness="1" Click="CopyButton_Click" Cursor="Hand"
                            ToolTip="å¤åˆ¶ä»£ç ">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Padding="{TemplateBinding Padding}"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <!-- é¼ æ ‡æ‚¬åœ -->
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#20FFFFFF" />
                                        <Setter Property="BorderBrush" Value="{DynamicResource Markdown.Link.Foreground}" />
                                    </Trigger>
                                    <!-- é¼ æ ‡æŒ‰ä¸‹ -->
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#30FFFFFF" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <StackPanel Orientation="Horizontal">
                            <!-- å›¾æ ‡ï¼ˆä½¿ç”¨Unicodeç¬¦å·ï¼‰ -->
                            <TextBlock x:Name="CopyIcon" Margin="0,0,4,0" FontFamily="Segoe MDL2 Assets" FontSize="12"
                                       Foreground="{DynamicResource Markdown.CodeBlock.LabelForeground}"
                                       Text="ðŸ“‹" />

                            <!-- æ–‡æœ¬ -->
                            <TextBlock x:Name="CopyText" FontSize="11"
                                       Foreground="{DynamicResource Markdown.CodeBlock.LabelForeground}"
                                       Text="å¤åˆ¶" />
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>

            <!-- ä»£ç å†…å®¹ -->
            <ScrollViewer Grid.Row="1" Padding="16,12" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">

                <TextBlock x:Name="CodeTextBlock"
                           FontFamily="{DynamicResource Markdown.CodeFontFamily}"
                           FontSize="{DynamicResource Markdown.CodeFontSize}"
                           Foreground="{DynamicResource Markdown.CodeBlock.Foreground}"
                           LineHeight="{DynamicResource Markdown.LineHeight}"
                           TextWrapping="NoWrap" />
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>
