<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ==================== 浅色主题 (Light Theme) ==================== -->
    <!-- 基于参考 MarkdownViewer 的样式标准 -->

    <!-- ==================== 基础颜色 ==================== -->

    <!-- 主要文本颜色 -->
    <SolidColorBrush x:Key="Markdown.Foreground" Color="#666666"/>

    <!-- 背景颜色（透明，使用父容器背景） -->
    <SolidColorBrush x:Key="Markdown.Background" Color="Transparent"/>

    <!-- 次要文本颜色 -->
    <SolidColorBrush x:Key="Markdown.SecondaryForeground" Color="#999999"/>

    <!-- ==================== 标题样式 ==================== -->

    <!-- H1 标题 - 字号28，粗体，深黑色 -->
    <SolidColorBrush x:Key="Markdown.Heading.H1.Foreground" Color="#1A1A1A"/>
    <SolidColorBrush x:Key="Markdown.Heading.H1.Border" Color="#E0E0E0"/>

    <!-- H2 标题 - 字号24，半粗体，深黑色 -->
    <SolidColorBrush x:Key="Markdown.Heading.H2.Foreground" Color="#1A1A1A"/>
    <SolidColorBrush x:Key="Markdown.Heading.H2.Border" Color="#E8E8E8"/>

    <!-- H3 标题 - 字号20，半粗体，深黑色 -->
    <SolidColorBrush x:Key="Markdown.Heading.H3.Foreground" Color="#1A1A1A"/>

    <!-- H4-H6 标题 -->
    <SolidColorBrush x:Key="Markdown.Heading.H4.Foreground" Color="#1A1A1A"/>
    <SolidColorBrush x:Key="Markdown.Heading.H5.Foreground" Color="#1A1A1A"/>
    <SolidColorBrush x:Key="Markdown.Heading.H6.Foreground" Color="#1A1A1A"/>

    <!-- 通用标题颜色（向后兼容） -->
    <SolidColorBrush x:Key="Markdown.Heading.Foreground" Color="#1A1A1A"/>
    <SolidColorBrush x:Key="Markdown.Heading.Border" Color="#E0E0E0"/>

    <!-- H1/H2 标题底部边框 -->
    <Thickness x:Key="Markdown.Heading.BorderThickness">0,0,0,1</Thickness>

    <!-- ==================== 引用块样式 ==================== -->

    <!-- 引用块背景颜色 - 保持浅灰 -->
    <SolidColorBrush x:Key="Markdown.Quote.Background" Color="#F9F9F9"/>

    <!-- 引用块边框颜色（左侧竖线） - 蓝色 -->
    <SolidColorBrush x:Key="Markdown.Quote.Border" Color="#4A90E2"/>

    <!-- 引用块文本颜色 - 深灰，斜体 -->
    <SolidColorBrush x:Key="Markdown.Quote.Foreground" Color="#5A5A5A"/>

    <!-- 引用块边框粗细 -->
    <Thickness x:Key="Markdown.Quote.BorderThickness">4,0,0,0</Thickness>

    <!-- 引用块内边距 -->
    <Thickness x:Key="Markdown.Quote.Padding">16,12,16,12</Thickness>

    <!-- ==================== 代码样式 ==================== -->

    <!-- 行内代码背景颜色 - 淡灰 -->
    <SolidColorBrush x:Key="Markdown.InlineCode.Background" Color="#F0F0F0"/>

    <!-- 行内代码文本颜色 - 红色 -->
    <SolidColorBrush x:Key="Markdown.InlineCode.Foreground" Color="#E53935"/>

    <!-- 行内代码边框颜色 -->
    <SolidColorBrush x:Key="Markdown.InlineCode.Border" Color="#E0E0E0"/>

    <!-- 代码块背景颜色 (Atom One Dark) -->
    <SolidColorBrush x:Key="Markdown.CodeBlock.Background" Color="#282C34"/>

    <!-- 代码块文本颜色 (Atom One Dark) -->
    <SolidColorBrush x:Key="Markdown.CodeBlock.Foreground" Color="#ABB2BF"/>

    <!-- 代码块边框颜色 - 深灰边框 -->
    <SolidColorBrush x:Key="Markdown.CodeBlock.Border" Color="#3A3A3A"/>

    <!-- 代码块语言标签背景 - 蓝色 -->
    <SolidColorBrush x:Key="Markdown.CodeBlock.LabelBackground" Color="#4A90E2"/>

    <!-- 代码块语言标签文本 - 白色 -->
    <SolidColorBrush x:Key="Markdown.CodeBlock.LabelForeground" Color="#FFFFFF"/>

    <!-- ==================== 代码语法高亮颜色 (Atom One Dark) ==================== -->

    <!-- 关键字 -->
    <SolidColorBrush x:Key="Markdown.Syntax.Keyword" Color="#C678DD"/>

    <!-- 字符串 -->
    <SolidColorBrush x:Key="Markdown.Syntax.String" Color="#98C379"/>

    <!-- 数字 -->
    <SolidColorBrush x:Key="Markdown.Syntax.Number" Color="#61AEEE"/>

    <!-- 注释 -->
    <SolidColorBrush x:Key="Markdown.Syntax.Comment" Color="#5C6370"/>

    <!-- 函数名 -->
    <SolidColorBrush x:Key="Markdown.Syntax.Function" Color="#61AFEF"/>

    <!-- 类型/类名 -->
    <SolidColorBrush x:Key="Markdown.Syntax.Type" Color="#E5C07B"/>

    <!-- 变量名 -->
    <SolidColorBrush x:Key="Markdown.Syntax.Variable" Color="#E06C75"/>

    <!-- ==================== 链接样式 ==================== -->

    <!-- 链接文本颜色 - 深蓝 -->
    <SolidColorBrush x:Key="Markdown.Link.Foreground" Color="#1976D2"/>

    <!-- 链接悬停颜色 -->
    <SolidColorBrush x:Key="Markdown.Link.HoverForeground" Color="#1565C0"/>

    <!-- 链接下划线颜色 -->
    <SolidColorBrush x:Key="Markdown.Link.UnderlineBrush" Color="#1976D2"/>

    <!-- ==================== 表格样式 ==================== -->

    <!-- 表格边框颜色 - 淡灰 -->
    <SolidColorBrush x:Key="Markdown.Table.Border" Color="#CCCCCC"/>

    <!-- 表格标题行背景 -->
    <SolidColorBrush x:Key="Markdown.Table.HeaderBackground" Color="#F5F5F5"/>

    <!-- 表格标题行文本 - 蓝色粗体 -->
    <SolidColorBrush x:Key="Markdown.Table.HeaderForeground" Color="#3A5FCD"/>

    <!-- 表格单元格背景（偶数行） -->
    <SolidColorBrush x:Key="Markdown.Table.CellBackground" Color="Transparent"/>

    <!-- 表格单元格背景（奇数行，斑马纹） -->
    <SolidColorBrush x:Key="Markdown.Table.AlternateBackground" Color="#FAFAFA"/>

    <!-- 表格单元格文本 -->
    <SolidColorBrush x:Key="Markdown.Table.CellForeground" Color="#333333"/>

    <!-- 表格边框粗细 -->
    <Thickness x:Key="Markdown.Table.BorderThickness">1</Thickness>

    <!-- 表格单元格内边距 -->
    <Thickness x:Key="Markdown.Table.CellPadding">8,6,8,6</Thickness>

    <!-- ==================== 列表样式 ==================== -->

    <!-- 列表项标记颜色 - 蓝色粗体 -->
    <SolidColorBrush x:Key="Markdown.List.MarkerForeground" Color="#4A90E2"/>

    <!-- 列表缩进 -->
    <Thickness x:Key="Markdown.List.Padding">0,4,0,4</Thickness>

    <!-- ==================== 分隔线样式 ==================== -->

    <!-- 水平线颜色 - 淡灰 -->
    <SolidColorBrush x:Key="Markdown.HorizontalRule.Border" Color="#CCCCCC"/>

    <!-- 水平线粗细 -->
    <Thickness x:Key="Markdown.HorizontalRule.BorderThickness">0,1,0,0</Thickness>

    <!-- 水平线外边距 -->
    <Thickness x:Key="Markdown.HorizontalRule.Margin">0,24,0,24</Thickness>

    <!-- ==================== 图片样式 ==================== -->

    <!-- 图片边框颜色 -->
    <SolidColorBrush x:Key="Markdown.Image.Border" Color="#CCCCCC"/>

    <!-- 图片边框粗细 -->
    <Thickness x:Key="Markdown.Image.BorderThickness">0</Thickness>

    <!-- 图片圆角 -->
    <CornerRadius x:Key="Markdown.Image.CornerRadius">4</CornerRadius>

    <!-- ==================== 强调样式 ==================== -->

    <!-- 粗体文本颜色 - 蓝色 -->
    <SolidColorBrush x:Key="Markdown.Bold.Foreground" Color="#3A5FCD"/>

    <!-- 斜体文本颜色（高亮效果） - 白色文字 + 紫色背景 -->
    <SolidColorBrush x:Key="Markdown.Italic.Foreground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Markdown.Italic.Background" Color="#7C7CFF"/>

    <!-- 删除线文本颜色 - 灰色 -->
    <SolidColorBrush x:Key="Markdown.Strikethrough.Foreground" Color="#999999"/>

    <!-- ==================== 任务列表样式 ==================== -->

    <!-- 复选框边框颜色 -->
    <SolidColorBrush x:Key="Markdown.TaskList.CheckboxBorder" Color="#D1D5DB"/>

    <!-- 复选框勾选颜色 - 绿色 -->
    <SolidColorBrush x:Key="Markdown.TaskList.CheckmarkForeground" Color="#4CAF50"/>

    <!-- 复选框背景 -->
    <SolidColorBrush x:Key="Markdown.TaskList.CheckboxBackground" Color="#FFFFFF"/>

    <!-- ==================== 警告/提示框样式 ==================== -->

    <!-- 信息框背景 -->
    <SolidColorBrush x:Key="Markdown.Alert.Info.Background" Color="#EFF6FF"/>

    <!-- 信息框边框 -->
    <SolidColorBrush x:Key="Markdown.Alert.Info.Border" Color="#4A90E2"/>

    <!-- 警告框背景 -->
    <SolidColorBrush x:Key="Markdown.Alert.Warning.Background" Color="#FFFBEB"/>

    <!-- 警告框边框 -->
    <SolidColorBrush x:Key="Markdown.Alert.Warning.Border" Color="#F59E0B"/>

    <!-- 错误框背景 -->
    <SolidColorBrush x:Key="Markdown.Alert.Error.Background" Color="#FEF2F2"/>

    <!-- 错误框边框 -->
    <SolidColorBrush x:Key="Markdown.Alert.Error.Border" Color="#EF4444"/>

    <!-- ==================== 字体配置 ==================== -->

    <!-- 默认字体族 -->
    <FontFamily x:Key="Markdown.FontFamily">PingFang SC, Microsoft YaHei, sans-serif</FontFamily>

    <!-- 代码字体族 - 优先使用现代等宽字体 -->
    <FontFamily x:Key="Markdown.CodeFontFamily">JetBrains Mono, Fira Code, Consolas, Monaco, Courier New, monospace</FontFamily>

    <!-- 默认字体大小 -->
    <System:Double xmlns:System="clr-namespace:System;assembly=mscorlib" x:Key="Markdown.FontSize">14</System:Double>

    <!-- H1 字体大小 -->
    <System:Double xmlns:System="clr-namespace:System;assembly=mscorlib" x:Key="Markdown.Heading.H1.FontSize">28</System:Double>

    <!-- H2 字体大小 -->
    <System:Double xmlns:System="clr-namespace:System;assembly=mscorlib" x:Key="Markdown.Heading.H2.FontSize">24</System:Double>

    <!-- H3 字体大小 -->
    <System:Double xmlns:System="clr-namespace:System;assembly=mscorlib" x:Key="Markdown.Heading.H3.FontSize">20</System:Double>

    <!-- H4 字体大小 -->
    <System:Double xmlns:System="clr-namespace:System;assembly=mscorlib" x:Key="Markdown.Heading.H4.FontSize">17</System:Double>

    <!-- H5 字体大小 -->
    <System:Double xmlns:System="clr-namespace:System;assembly=mscorlib" x:Key="Markdown.Heading.H5.FontSize">15</System:Double>

    <!-- H6 字体大小 -->
    <System:Double xmlns:System="clr-namespace:System;assembly=mscorlib" x:Key="Markdown.Heading.H6.FontSize">15</System:Double>

    <!-- 代码字体大小 -->
    <System:Double xmlns:System="clr-namespace:System;assembly=mscorlib" x:Key="Markdown.CodeFontSize">13.5</System:Double>

    <!-- 行内代码字体大小 -->
    <System:Double xmlns:System="clr-namespace:System;assembly=mscorlib" x:Key="Markdown.InlineCodeFontSize">13</System:Double>

    <!-- 行高 -->
    <System:Double xmlns:System="clr-namespace:System;assembly=mscorlib" x:Key="Markdown.LineHeight">1.6</System:Double>

</ResourceDictionary>
