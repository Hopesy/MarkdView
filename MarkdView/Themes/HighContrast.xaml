<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ==================== 高对比度主题 (High Contrast Theme) ==================== -->
    <!-- 适用于视力障碍用户，符合无障碍访问标准(WCAG AAA) -->

    <!-- ==================== 基础颜色 ==================== -->

    <!-- 主要文本颜色（高对比度白色） -->
    <SolidColorBrush x:Key="Markdown.Foreground" Color="#FFFFFF"/>

    <!-- 背景颜色（纯黑） -->
    <SolidColorBrush x:Key="Markdown.Background" Color="#000000"/>

    <!-- 次要文本颜色 -->
    <SolidColorBrush x:Key="Markdown.SecondaryForeground" Color="#CCCCCC"/>

    <!-- ==================== 标题样式 ==================== -->

    <!-- 标题文本颜色（高亮黄色） -->
    <SolidColorBrush x:Key="Markdown.Heading.Foreground" Color="#FFFF00"/>

    <!-- 标题下划线颜色 -->
    <SolidColorBrush x:Key="Markdown.Heading.Border" Color="#FFFF00"/>

    <!-- H1/H2 标题底部边框（强调） -->
    <Thickness x:Key="Markdown.Heading.BorderThickness">0,0,0,3</Thickness>

    <!-- ==================== 引用块样式 ==================== -->

    <!-- 引用块背景颜色 -->
    <SolidColorBrush x:Key="Markdown.Quote.Background" Color="#0A0A0A"/>

    <!-- 引用块边框颜色（左侧竖线） -->
    <SolidColorBrush x:Key="Markdown.Quote.Border" Color="#00FFFF"/>

    <!-- 引用块文本颜色 -->
    <SolidColorBrush x:Key="Markdown.Quote.Foreground" Color="#FFFFFF"/>

    <!-- 引用块边框粗细 -->
    <Thickness x:Key="Markdown.Quote.BorderThickness">6,0,0,0</Thickness>

    <!-- 引用块内边距 -->
    <Thickness x:Key="Markdown.Quote.Padding">18,14,18,14</Thickness>

    <!-- ==================== 代码样式 ==================== -->

    <!-- 行内代码背景颜色 -->
    <SolidColorBrush x:Key="Markdown.InlineCode.Background" Color="#1A1A1A"/>

    <!-- 行内代码文本颜色 -->
    <SolidColorBrush x:Key="Markdown.InlineCode.Foreground" Color="#00FF00"/>

    <!-- 行内代码边框颜色 -->
    <SolidColorBrush x:Key="Markdown.InlineCode.Border" Color="#00FF00"/>

    <!-- 代码块背景颜色 -->
    <SolidColorBrush x:Key="Markdown.CodeBlock.Background" Color="#0A0A0A"/>

    <!-- 代码块文本颜色 -->
    <SolidColorBrush x:Key="Markdown.CodeBlock.Foreground" Color="#FFFFFF"/>

    <!-- 代码块边框颜色 -->
    <SolidColorBrush x:Key="Markdown.CodeBlock.Border" Color="#FFFFFF"/>

    <!-- 代码块语言标签背景 -->
    <SolidColorBrush x:Key="Markdown.CodeBlock.LabelBackground" Color="#1A1A1A"/>

    <!-- 代码块语言标签文本 -->
    <SolidColorBrush x:Key="Markdown.CodeBlock.LabelForeground" Color="#FFFF00"/>

    <!-- ==================== 代码语法高亮颜色（高对比度） ==================== -->

    <!-- 关键字（if, class, function 等） -->
    <SolidColorBrush x:Key="Markdown.Syntax.Keyword" Color="#FF00FF"/>

    <!-- 字符串 -->
    <SolidColorBrush x:Key="Markdown.Syntax.String" Color="#00FF00"/>

    <!-- 数字 -->
    <SolidColorBrush x:Key="Markdown.Syntax.Number" Color="#00FFFF"/>

    <!-- 注释 -->
    <SolidColorBrush x:Key="Markdown.Syntax.Comment" Color="#808080"/>

    <!-- 函数名 -->
    <SolidColorBrush x:Key="Markdown.Syntax.Function" Color="#FFFF00"/>

    <!-- 类型/类名 -->
    <SolidColorBrush x:Key="Markdown.Syntax.Type" Color="#00FFFF"/>

    <!-- 变量名 -->
    <SolidColorBrush x:Key="Markdown.Syntax.Variable" Color="#FFA500"/>

    <!-- ==================== 链接样式 ==================== -->

    <!-- 链接文本颜色 -->
    <SolidColorBrush x:Key="Markdown.Link.Foreground" Color="#00FFFF"/>

    <!-- 链接悬停颜色 -->
    <SolidColorBrush x:Key="Markdown.Link.HoverForeground" Color="#FFFF00"/>

    <!-- 链接下划线颜色 -->
    <SolidColorBrush x:Key="Markdown.Link.UnderlineBrush" Color="#00FFFF"/>

    <!-- ==================== 表格样式 ==================== -->

    <!-- 表格边框颜色 -->
    <SolidColorBrush x:Key="Markdown.Table.Border" Color="#FFFFFF"/>

    <!-- 表格标题行背景 -->
    <SolidColorBrush x:Key="Markdown.Table.HeaderBackground" Color="#1A1A1A"/>

    <!-- 表格标题行文本 -->
    <SolidColorBrush x:Key="Markdown.Table.HeaderForeground" Color="#FFFF00"/>

    <!-- 表格单元格背景（偶数行） -->
    <SolidColorBrush x:Key="Markdown.Table.CellBackground" Color="#000000"/>

    <!-- 表格单元格背景（奇数行，斑马纹） -->
    <SolidColorBrush x:Key="Markdown.Table.AlternateBackground" Color="#0A0A0A"/>

    <!-- 表格单元格文本 -->
    <SolidColorBrush x:Key="Markdown.Table.CellForeground" Color="#FFFFFF"/>

    <!-- 表格边框粗细 -->
    <Thickness x:Key="Markdown.Table.BorderThickness">2</Thickness>

    <!-- 表格单元格内边距 -->
    <Thickness x:Key="Markdown.Table.CellPadding">10,8,10,8</Thickness>

    <!-- ==================== 列表样式 ==================== -->

    <!-- 列表项标记颜色（圆点、数字） -->
    <SolidColorBrush x:Key="Markdown.List.MarkerForeground" Color="#FFFF00"/>

    <!-- 列表缩进 -->
    <Thickness x:Key="Markdown.List.Padding">0,6,0,6</Thickness>

    <!-- ==================== 分隔线样式 ==================== -->

    <!-- 水平线颜色 -->
    <SolidColorBrush x:Key="Markdown.HorizontalRule.Border" Color="#FFFFFF"/>

    <!-- 水平线粗细 -->
    <Thickness x:Key="Markdown.HorizontalRule.BorderThickness">0,2,0,0</Thickness>

    <!-- 水平线外边距 -->
    <Thickness x:Key="Markdown.HorizontalRule.Margin">0,20,0,20</Thickness>

    <!-- ==================== 图片样式 ==================== -->

    <!-- 图片边框颜色 -->
    <SolidColorBrush x:Key="Markdown.Image.Border" Color="#FFFFFF"/>

    <!-- 图片边框粗细 -->
    <Thickness x:Key="Markdown.Image.BorderThickness">2</Thickness>

    <!-- 图片圆角 -->
    <CornerRadius x:Key="Markdown.Image.CornerRadius">0</CornerRadius>

    <!-- ==================== 强调样式 ==================== -->

    <!-- 粗体文本颜色 -->
    <SolidColorBrush x:Key="Markdown.Bold.Foreground" Color="#FFFFFF"/>

    <!-- 斜体文本颜色 -->
    <SolidColorBrush x:Key="Markdown.Italic.Foreground" Color="#FFFFFF"/>

    <!-- 删除线文本颜色 -->
    <SolidColorBrush x:Key="Markdown.Strikethrough.Foreground" Color="#808080"/>

    <!-- ==================== 任务列表样式 ==================== -->

    <!-- 复选框边框颜色 -->
    <SolidColorBrush x:Key="Markdown.TaskList.CheckboxBorder" Color="#FFFFFF"/>

    <!-- 复选框勾选颜色 -->
    <SolidColorBrush x:Key="Markdown.TaskList.CheckmarkForeground" Color="#00FF00"/>

    <!-- 复选框背景 -->
    <SolidColorBrush x:Key="Markdown.TaskList.CheckboxBackground" Color="#000000"/>

    <!-- ==================== 警告/提示框样式 ==================== -->

    <!-- 信息框背景 -->
    <SolidColorBrush x:Key="Markdown.Alert.Info.Background" Color="#001A33"/>

    <!-- 信息框边框 -->
    <SolidColorBrush x:Key="Markdown.Alert.Info.Border" Color="#00FFFF"/>

    <!-- 警告框背景 -->
    <SolidColorBrush x:Key="Markdown.Alert.Warning.Background" Color="#331A00"/>

    <!-- 警告框边框 -->
    <SolidColorBrush x:Key="Markdown.Alert.Warning.Border" Color="#FFA500"/>

    <!-- 错误框背景 -->
    <SolidColorBrush x:Key="Markdown.Alert.Error.Background" Color="#330000"/>

    <!-- 错误框边框 -->
    <SolidColorBrush x:Key="Markdown.Alert.Error.Border" Color="#FF0000"/>

    <!-- ==================== 字体配置 ==================== -->

    <!-- 默认字体族 -->
    <FontFamily x:Key="Markdown.FontFamily">Segoe UI, PingFang SC, Microsoft YaHei, sans-serif</FontFamily>

    <!-- 代码字体族 -->
    <FontFamily x:Key="Markdown.CodeFontFamily">Consolas, Monaco, Courier New, monospace</FontFamily>

    <!-- 默认字体大小（稍大，便于阅读） -->
    <System:Double xmlns:System="clr-namespace:System;assembly=mscorlib" x:Key="Markdown.FontSize">16</System:Double>

    <!-- 代码字体大小 -->
    <System:Double xmlns:System="clr-namespace:System;assembly=mscorlib" x:Key="Markdown.CodeFontSize">15</System:Double>

    <!-- 行高（增加间距） -->
    <System:Double xmlns:System="clr-namespace:System;assembly=mscorlib" x:Key="Markdown.LineHeight">26</System:Double>

</ResourceDictionary>
